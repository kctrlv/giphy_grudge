<!DOCTYPE html>
<html>
  <head>
    <title>SlackPersonalProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %>">
        <%= message %>
      </div>
      <% if current_user %>
        <%= link_to "Logout", logout_path %>
      <% else %>
        <%= link_to image_tag("https://api.slack.com/img/sign_in_with_slack.png"),
        "https://slack.com/oauth/authorize?scope=identity.basic&client_id=#{ENV['slack_id']}" %>
      <% end %>
    <% end %>
  <%= yield %>
  </body>
</html>
